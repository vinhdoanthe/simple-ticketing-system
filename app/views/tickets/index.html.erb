  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tickets</h1>
    <%= link_to 'New ticket', new_ticket_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
<div class="container mx-auto py-6">
  <div class="flex flex-col">
    <!-- Table header -->
    <div class="flex flex-row mb-1">
      <div class="w-1/3 px-4 py-2 bg-gray-100 text-gray-800 font-semibold">ID</div>
      <div class="w-1/3 px-4 py-2 bg-gray-100 text-gray-800 font-semibold">Title</div>
      <div class="w-1/3 px-4 py-2 bg-gray-100 text-gray-800 font-semibold">Description</div>
      <div class="w-1/3 px-4 py-2 bg-gray-100 text-gray-800 font-semibold">Status</div>
      <div class="w-1/3 px-4 py-2 bg-gray-100 text-gray-800 font-semibold">Priority</div>
      <div class="w-1/3 px-4 py-2 bg-gray-100 text-gray-800 font-semibold">Created by</div>
    </div>
    <!-- Table body -->
    <%= render TicketRowComponent.with_collection(@tickets) %>
  </div>
</div>

