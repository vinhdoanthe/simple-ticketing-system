<% if user_signed_in? %>
  <nav class="bg-gray-100 shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between h-16">
        <!-- Logo -->
        <div class="flex-shrink-0 flex items-center">
          <a href="/">
            <img class="h-8 w-auto" src="logo.svg" alt="Logo">
          </a>
        </div>

        <!-- Login/Logout Button -->
        <div class="flex items-center">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded", data: { turbo_method: "delete" } %>
        </div>
      </div>
    </div>
  </nav>
