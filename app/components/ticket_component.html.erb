<div class="bg-gray-100 rounded-md shadow-lg p-6">
  <div id="<%= dom_id @ticket %>">
    <p class="text-lg font-semibold mb-4"><%= @ticket.title %></p>
  <p class="mb-4">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= @ticket.description %>
  </p>

  <p class="mb-4">
    <strong class="block font-medium mb-1">Files:</strong>
    <% @ticket.files.each do |file| %>
      <div><%= link_to file.filename, file %></div>
    <% end %>
  </p>

  <p class="mb-4">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= @ticket.status %>
  </p>

  <p class="mb-4">
    <strong class="block font-medium mb-1">Priority:</strong>
    <%= @ticket.priority %>
  </p>

  <p class="mb-4">
    <strong class="block font-medium mb-1">Ticket type:</strong>
    <%= @ticket.ticket_type %>
  </p>
    <div class="flex justify-end">
      <%= link_to "Edit this ticket", edit_ticket_path(@ticket), class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded mr-2" %>
      <%= link_to "Back to tickets", tickets_path, class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded mr-2" %>
      <%= link_to "Delete this ticket", ticket_path(@ticket), class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded", data: { turbo_method: :delete , turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>

